.row
  .col-lg-12
    %table.table
      %tr
        %th ID
        %th Name
        %th Game
        %th Participants
        %th
      - @matches.each do |match|
        %tr
          %td= match.id
          %td= link_to match.name, match_path(match)
          %td= match.game
          %td= match.pots.count
          %td
            = link_to 'Delete', match_path(match), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

